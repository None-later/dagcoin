<?xml version='1.0' encoding='utf-8'?>
<widget id="@ANDROID_PACKAGE"
        version="2.0.1"
        android-versionCode="1064"
        ios-CFBundleVersion="2.0.1">
  <name>@APPLICATION_NAME</name>
  <description>
    Dagcoin wallet.
  </description>
  <author email="support@dagcoin.org" href="https://dagcoin.org">
    Dagcoin
  </author>
  <content src="index.html"/>
  <access origin="*"/>
  <preference name="AndroidPersistentFileLocation" value="Internal"/>
  <preference name="iosPersistentFileLocation" value="Library"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="HideKeyboardFormAccessoryBar" value="true"/>
  <preference name="SplashScreen" value="copayscreen"/>
  <preference name="ShowSplashScreenSpinner" value="true"/>
  <preference name="AutoHideSplashScreen" value="false"/>
  <preference name="FadeSplashScreen" value="true"/>
  <preference name="FadeSplashScreenDuration" value="1000"/>
  <preference name="SplashMaintainAspectRatio" value="true"/>
  <preference name="BackgroundColor" value="#2C3E50"/>
  <preference name="StatusBarOverlaysWebView" value="false"/>
  <preference name="StatusBarBackgroundColor" value="#2C3E50"/>
  <preference name="StatusBarStyle" value="lightcontent"/>
  <preference name="BackupWebStorage" value="none"/>
  <preference name="windows-target-version" value="8.1"/>
  <preference name="Orientation" value="portrait"/>

  <preference name="KeepRunning" value="false"/>
  <preference name="android-minSdkVersion" value="19"/>
  <preference name="deployment-target" value="9.0"/>
  <preference name="AndroidLaunchMode" value="singleTask"/>

  <platform name="ios">
    <icon src="../ios/icon/icon-40.png" width="40" height="40"/>
    <icon src="../ios/icon/icon-40@2x.png" width="80" height="80"/>
    <icon src="../ios/icon/icon-40@3x.png" width="120" height="120"/>
    <icon src="../ios/icon/icon-50.png" width="50" height="50"/>
    <icon src="../ios/icon/icon-50@2x.png" width="100" height="100"/>
    <icon src="../ios/icon/icon-60.png" width="60" height="60"/>
    <icon src="../ios/icon/icon-60@2x.png" width="120" height="120"/>
    <icon src="../ios/icon/icon-60@3x.png" width="180" height="180"/>
    <icon src="../ios/icon/icon-72.png" width="72" height="72"/>
    <icon src="../ios/icon/icon-72@2x.png" width="144" height="144"/>
    <icon src="../ios/icon/icon-76.png" width="76" height="76"/>
    <icon src="../ios/icon/icon-76@2x.png" width="152" height="152"/>
    <icon src="../ios/icon/icon-83.5@2x.png" width="167" height="167"/>
    <icon src="../ios/icon/icon-small.png" width="29" height="29"/>
    <icon src="../ios/icon/icon-small@2x.png" width="58" height="58"/>
    <icon src="../ios/icon/icon-small@3x.png" width="87" height="87"/>
    <icon src="../ios/icon/icon.png" width="57" height="57"/>
    <icon src="../ios/icon/icon@2x.png" width="114" height="114"/>

    <splash src="../ios/splash/Default-568h@2x~iphone.png" width="640" height="1136"/>
    <splash src="../ios/splash/Default-667h.png" width="750" height="1334"/>
    <splash src="../ios/splash/Default-736h.png" width="1242" height="2208"/>
    <splash src="../ios/splash/Default-Landscape-736h.png" width="2208" height="1242"/>
    <splash src="../ios/splash/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
    <splash src="../ios/splash/Default-Landscape@~ipadpro.png" width="2732" height="2048"/>
    <splash src="../ios/splash/Default-Landscape~ipad.png" width="1024" height="768"/>
    <splash src="../ios/splash/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
    <splash src="../ios/splash/Default-Portrait@~ipadpro.png" width="2048" height="2732"/>
    <splash src="../ios/splash/Default-Portrait~ipad.png" width="768" height="1024"/>
    <splash src="../ios/splash/Default@2x~iphone.png" width="640" height="960"/>
    <splash src="../ios/splash/Default~iphone.png" width="320" height="480"/>

  </platform>

  <universal-links>
    <host name="@UNIVERSAL_LINK_HOST" scheme="https">
      <path url="/paymentRequest" event="paymentRequest"/>
    </host>
  </universal-links>

</widget>
